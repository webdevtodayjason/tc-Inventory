FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your_generated_secret_key_from_step_1
DATABASE_URL=postgresql://inventory_admin:your_secure_password@localhost:5432/inventory_db
DEBUG=True
TESTING=False

# System Defaults (can be overridden in admin config)
DEFAULT_ITEMS_PER_PAGE=20
DEFAULT_ALLOW_REGISTRATION=false
DEFAULT_REQUIRE_EMAIL_VERIFICATION=false
DEFAULT_ALLOW_PASSWORD_RESET=true

# Required Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_secure_password
ADMIN_PIN=123456  # Must be 6 digits

# Required API Keys
UPCITEMDB_API_KEY=your_api_key_here